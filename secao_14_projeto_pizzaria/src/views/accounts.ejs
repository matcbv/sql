<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/tailwind/output.css">
    <title>Demonstrando SQL</title>
</head>
<body class="max-w-100 h-screen bg-green-50">
    <header class="bg-green-800 px-10 py-5">
        <div>
            <ul class="flex gap-x-10 list-none">
                <li><a class="font-sans text-lg no-underline text-white" href="/">Home</a></li>
                <li><a class="font-sans text-lg no-underline text-white" href="/accounts">Contas</a></li>
            </ul>
        </div>
    </header>
    <main class="px-8">
        <h1 class="my-8 font-sans">Contas</h1>
        <% result.forEach(element => { %>
            <div class="flex items-center mb-8">
                <div>
                    <p><%= element.nome %></p>
                    <p><%= element.sobrenome %></p>
                    <p><%= element.cpf %></p>
                </div>
                <button type="button" class="del-account ml-4 h-8 px-4 rounded-full cursor-pointer">Deletar conta</button>
            </div>
        <% }) %>
    </main>
    <script src="/js/index.js"></script>
</body>
</html>